<ul class="list_blog">
  <% @blogs.each do |blog| %>
   <% if user_signed_in? && current_user.id == blog.user_id %>
  <li>
    <h2><%= blog.title %></h2>
    <% if blog.image != "" %>
      <p><img src="<%= blog.image %>"></p>
    <% end %>
    <p><%= blog.content %></p>
    <p><%= blog.created_at %></p>
  </li>
 <% end %>


        <div class="more">
          <span><%= image_tag 'arrow_top.png' %></span>
          <ul class="more_list">
            <li>
              <%= link_to '編集', "/blogs/#{blog.id}/edit", method: :get %>
            </li>
            <li>
              <%= link_to '削除', "/blogs/#{blog.id}", method: :delete %>
            </li>
          </ul>
        </div>
      <% end %>
 


 <%= paginate(@blogs) %>
</ul> 