<%= form_for :blog, url: blogs_path do |f| %>
  <p>
    <%= f.label :title, "タイトル" %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :image, "画像" %><br>
    <%= f.text_field :image %>
  </p>

  <p>
    <%= f.label :content, "内容" %><br>
    <%= f.text_area :content, cols: 60, rows: 20 %>
  </p>
 
  <p>
    <%= f.submit "修正"%>
  </p>
<% end %>
